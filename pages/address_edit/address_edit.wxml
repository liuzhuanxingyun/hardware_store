<!--pages/address_edit/address_edit.wxml-->
<view class="container-edit">
  <navigation-bar title="编辑收货地址" back="{{true}}" color="#000" background="#fff"></navigation-bar>

  <scroll-view scroll-y class="content-scroll">
    <view class="form-wrapper">
      <!-- 主要信息卡片 -->
      <view class="form-card">
        <view class="form-item">
          <text class="label">收货人</text>
          <input class="input" placeholder="请填写收货人姓名" value="{{name}}" bindinput="onInput" data-key="name"/>
        </view>
        <view class="form-item">
          <text class="label">手机号</text>
          <input class="input" type="number" placeholder="请填写手机号码" value="{{phone}}" bindinput="onInput" data-key="phone"/>
        </view>
        <view class="form-item">
          <text class="label">所在地区</text>
          <picker mode="region" bindchange="onRegionChange" value="{{region}}">
            <view class="picker">{{region[0]}} {{region[1]}} {{region[2]}}</view>
          </picker>
        </view>
        <view class="form-item">
          <text class="label">详细地址</text>
          <input class="input" placeholder="街道、楼牌号等" value="{{detail}}" bindinput="onInput" data-key="detail"/>
        </view>
      </view>

      <!-- 默认地址开关卡片 -->
      <view class="switch-card">
        <text class="label">设为默认</text>
        <switch checked="{{isDefault}}" bindchange="onSwitchChange" color="#ff6b00"/>
      </view>
      
      <button class="save-btn" bindtap="save">保存</button>
      <button wx:if="{{id}}" class="delete-btn" bindtap="deleteAddr">删除</button>
    </view>
  </scroll-view>
</view>