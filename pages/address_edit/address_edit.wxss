/* pages/address_edit/address_edit.wxss */
page {
  height: 100%;
  overflow: hidden;
  background-color: #f5f5f5;
}

.container-edit {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 导航栏 */
navigation-bar {
  flex: none;
  z-index: 9999;
}

/* 滚动区域 */
.content-scroll {
  flex: 1;
  overflow-y: auto;
}

.form-wrapper {
  padding: 20rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 表单卡片容器 */
.form-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.form-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  min-height: 100rpx; /* 增加点击区域高度 */
  box-sizing: border-box;
}

/* 移除最后一个元素的底边框 */
.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  height: 100%;
}

.picker {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

/* 独立的开关卡片 */
.switch-card {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  min-height: 100rpx;
}

/* 保存按钮 */
.save-btn {
  margin-top: 60rpx;
  background: linear-gradient(135deg, #ff9000, #ff5000);
  color: #fff;
  border-radius: 44rpx;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
  
  /* --- 核心修复代码 --- */
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal; /* 重置行高 */
  padding: 0;          /* 清除默认内边距，解决对齐问题的关键 */
  /* ------------------ */
}

.save-btn:active {
  opacity: 0.9;
}

/* 删除按钮 */
.delete-btn {
  margin-top: 30rpx;
  background: #fff;
  color: #666;
  border-radius: 44rpx;
  height: 88rpx;
  font-size: 32rpx;
  
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
  padding: 0;          /* 同样清除内边距 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}