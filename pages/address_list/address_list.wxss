/* pages/address_list/address_list.wxss */
page {
  height: 100%;
  overflow: hidden; /* 禁止页面整体滚动 */
  background-color: #f5f5f5;
}

/* 页面容器：全屏 Flex 布局 */
.container-address {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 导航栏：防止被压缩，层级最高 */
navigation-bar {
  flex: none;
  z-index: 9999;
}

/* 滚动区域：占据剩余空间 */
.content-scroll {
  flex: 1;
  overflow-y: auto;
  /* 确保滚动区域有高度 */
  height: 0; 
}

.list-wrapper {
  padding: 20rpx;
  /* 底部留白，防止内容被底部按钮遮挡 */
  padding-bottom: 140rpx; 
}

/* 地址卡片样式 */
.address-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.info {
  flex: 1;
  margin-right: 20rpx;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.tag {
  font-size: 20rpx;
  color: #ff6b00;
  background: rgba(255, 107, 0, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.detail {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

.edit-btn {
  padding: 10rpx 0 10rpx 20rpx;
  font-size: 26rpx;
  color: #999;
  border-left: 1rpx solid #eee;
}

/* 底部按钮区域 */
.footer {
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  flex: none; /* 防止被压缩 */
  z-index: 10;
}

.add-btn {
  background: linear-gradient(135deg, #ff9000, #ff5000);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 88rpx;
  
  /* --- 修改开始：修复文字不居中问题 --- */
  display: flex;           /* 启用 Flex 布局 */
  align-items: center;     /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  line-height: normal;     /* 重置行高，防止冲突 */
  padding: 0;              /* 清除默认内边距 */
  /* --- 修改结束 --- */
}

.empty-state {
  text-align: center;
  padding-top: 200rpx;
  color: #ccc;
  font-size: 28rpx;
}