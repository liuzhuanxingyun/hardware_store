/* pages/cart/cart.wxss */
.container-cart {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 防止导航栏被压缩 */
navigation-bar {
  flex: none;
  z-index: 999;
}

.cart-list {
  flex: 1;
  overflow-y: auto;
  /* 底部留白，防止内容被结算栏遮挡 */
  padding-bottom: 220rpx; 
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 16rpx;
}

.checkbox-area {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #eee;
  flex-shrink: 0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  overflow: hidden;
}

/* 顶部区域：标题 + 删除按钮 */
.info-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  flex: 1;
  margin-right: 10rpx;
}

/* 删除按钮样式 */
.delete-btn {
  font-size: 24rpx;
  color: #999;
  padding: 0 10rpx;
  flex-shrink: 0;
}

.goods-spec {
  font-size: 22rpx;
  color: #999;
  background-color: #f9f9f9;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  align-self: flex-start;
  margin-top: 8rpx;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price {
  color: #ff6b00;
  font-size: 32rpx;
  font-weight: bold;
}

/* 步进器样式 */
.stepper {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.step-btn {
  width: 50rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 32rpx;
}

.step-num {
  width: 60rpx;
  text-align: center;
  font-size: 26rpx;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  height: 44rpx;
  line-height: 44rpx;
}

.empty-cart {
  padding-top: 200rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 底部结算栏 */
.footer-bar {
  position: fixed;
  /* 位于自定义 TabBar 之上 (TabBar 高度约 48px + safe-area) */
  bottom: calc(env(safe-area-inset-bottom) + 48px); 
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.all-text {
  margin-left: 10rpx;
}

.total-info {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.total-price {
  color: #ff6b00;
  font-size: 36rpx;
  font-weight: bold;
}

.checkout-btn {
  width: 200rpx;
  height: 76rpx;
  background: linear-gradient(90deg, #ff7500, #ff4b00);
  color: #fff;
  border-radius: 38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}