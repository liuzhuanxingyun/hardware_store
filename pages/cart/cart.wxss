/* pages/cart/cart.wxss */
.container-cart {
  min-height: 100vh;
  background: #f7f9fb;
  padding-bottom: 100rpx; /* 留出底部栏高度 */
}

.cart-list {
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  height: calc(100vh - 100rpx); /* 减去底部栏 */
}

.cart-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}

.checkbox-area {
  padding-right: 20rpx;
}

.goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f8f8f8;
  margin-right: 24rpx;
}

/* 修改 goods-info 布局 */
.goods-info {
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative; /* 为删除按钮定位 */
}

.info-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-right: 60rpx; /* 留出删除按钮空间 */
  line-height: 1.3;
}

.delete-btn {
  font-size: 22rpx;
  color: #999;
  padding: 0 10rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.goods-spec {
  font-size: 22rpx;
  color: #999;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  align-self: flex-start;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
}

/* 步进器 */
.stepper {
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
}

.step-btn {
  width: 50rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}

.step-num {
  width: 60rpx;
  text-align: center;
  font-size: 26rpx;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
  height: 44rpx;
  line-height: 44rpx;
}

/* 底部栏 */
.footer-bar {
  position: fixed;
  bottom: 0; /* 如果有TabBar，这里可能需要调整，通常小程序TabBar会自动处理，但自定义TabBar需要注意 */
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
  /* 删除下面这一行，TabBar页面不需要为内容区底部元素添加安全距离 */
  /* padding-bottom: env(safe-area-inset-bottom); */
}

.select-all {
  display: flex;
  align-items: center;
}

.all-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 12rpx;
}

.total-info {
  flex: 1;
  text-align: right;
  margin-right: 24rpx;
  font-size: 26rpx;
}

.total-price {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.checkout-btn {
  width: 200rpx;
  height: 72rpx;
  background: #ff6b00;
  color: #fff;
  text-align: center;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.empty-cart {
  text-align: center;
  padding-top: 200rpx;
  color: #999;
}