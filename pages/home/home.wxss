/* pages/home/home.wxss */
.container-main {
  min-height: 100vh;
  background: #f7f9fb;
}

/* 搜索框 */
.search-wrapper {
  padding: 12rpx 32rpx;
  background: #f7f9fb;
}

.search-bar {
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  border: 1rpx solid rgba(0,0,0,0.03);
}

.search-placeholder {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 92vw;
  height: 300rpx;
  margin: 20rpx auto 0;
  border-radius: 24rpx;
  overflow: hidden;
  transform: translateY(0); /* 修复圆角溢出 */
}

.banner-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* 金刚区分类 */
.category-grid {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 12rpx;
  /* 实际项目中这里应该是图标，暂时用背景色代替或放占位图 */
  background-color: #eef2f5; 
}

.category-name {
  font-size: 24rpx;
  color: #555;
}

/* 标题栏 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 10rpx 32rpx 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #222;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 商品列表 - 瀑布流布局感 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  justify-content: space-between;
}

.goods-item {
  width: 48%; /* 双列布局 */
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.goods-img-box {
  width: 100%;
  height: 340rpx; /* 图片加高，展示更多细节 */
  background: #f8f8f8;
}

.goods-img {
  width: 100%;
  height: 100%;
}

.goods-info {
  padding: 16rpx 20rpx 0;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.tag {
  font-size: 20rpx;
  color: #ff6b00;
  background: rgba(255, 107, 0, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  font-family: 'DIN', sans-serif; /* 数字字体优化 */
}

.symbol {
  font-size: 22rpx;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  background: #222;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 44rpx;
  font-size: 32rpx;
  font-weight: 300;
}