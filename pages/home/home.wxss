/* pages/home/home.wxss */
.container-main {
  min-height: 100vh;
  background: #f7f9fb;
}

/* 搜索框 */
.search-wrapper {
  padding: 12rpx 32rpx;
  background: #f7f9fb;
}

.search-bar {
  height: 72rpx;
  background: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
  border: 1rpx solid rgba(0,0,0,0.03);
}

.search-placeholder {
  font-size: 26rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 轮播图 */
.banner-swiper {
  width: 92vw;
  height: 300rpx;
  margin: 20rpx auto 0;
  border-radius: 24rpx;
  overflow: hidden;
  transform: translateY(0); /* 修复圆角溢出 */
}

.banner-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* 金刚区分类 */
.category-grid {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 12rpx;
  /* 实际项目中这里应该是图标，暂时用背景色代替或放占位图 */
  background-color: #eef2f5; 
}

.category-name {
  font-size: 24rpx;
  color: #555;
}

/* 标题栏 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 10rpx 32rpx 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #222;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 商品列表 - 瀑布流布局感 */
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 24rpx;
  justify-content: space-between;
}

.goods-item {
  width: 48%; /* 双列布局 */
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.goods-img-box {
  width: 100%;
  height: 340rpx; /* 图片加高，展示更多细节 */
  background: #f8f8f8;
}

.goods-img {
  width: 100%;
  height: 100%;
}

.goods-info {
  padding: 16rpx 20rpx 0;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.tag {
  font-size: 20rpx;
  color: #ff6b00;
  background: rgba(255, 107, 0, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.goods-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
  font-family: 'DIN', sans-serif; /* 数字字体优化 */
}

.symbol {
  font-size: 22rpx;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  background: #222;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 44rpx;
  font-size: 32rpx;
  font-weight: 300;
}

/* --- 新增：底部弹窗样式 --- */

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 10000; /* 修改：提高层级，覆盖 TabBar */
}

/* 弹出层 */
.spec-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 10001; /* 修改：提高层级，覆盖 TabBar */
  transform: translateY(100%);
  transition: transform 0.3s;
  padding-bottom: env(safe-area-inset-bottom);
}

.spec-popup.show {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  padding: 30rpx;
  position: relative;
}

.popup-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background-color: #f8f8f8;
}

.popup-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 10rpx;
}

.popup-price {
  color: #ff5000;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.popup-selected {
  font-size: 26rpx;
  color: #999;
}

.close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 44rpx;
  color: #ccc;
  padding: 10rpx;
  line-height: 1;
}

.popup-content {
  max-height: 600rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box; /* 修改：防止 padding 撑大宽度导致溢出 */
}

/* 规格区域 */
.spec-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: 600;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
}

.spec-item {
  padding: 12rpx 36rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  border: 1px solid #f5f5f5;
  transition: all 0.2s;
}

.spec-item.active {
  background: #fff5f0;
  color: #ff5000;
  border-color: #ff5000;
}

/* 数量区域 */
.count-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.stepper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
}

.step-btn {
  width: 60rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.step-btn.disabled {
  color: #ccc;
}

.step-input {
  width: 80rpx;
  height: 56rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.popup-footer {
  padding: 20rpx 30rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.05);
}

.confirm-btn {
  background: linear-gradient(135deg, #ff9000, #ff5000);
  color: #fff;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}