/* pages/launch/launch.wxss */
.launch-bg {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8fafc 0%, #e0e7ef 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 400rpx;
}

.master-photo-wrapper {
  margin-top: 120rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx 0 rgba(60, 60, 60, 0.18);
  border-radius: 50%;
  background: #fff;
  padding: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.master-photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #e0e7ef;
  box-shadow: 0 4rpx 16rpx 0 rgba(60, 60, 60, 0.10);
}

.welcome-text {
  margin-top: 32rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 8rpx rgba(180, 180, 180, 0.15);
}