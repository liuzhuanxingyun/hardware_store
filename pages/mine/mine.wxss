/* pages/mine/mine.wxss */
page {
  background-color: #f8f8f8;
}

.container-mine {
  padding-bottom: 100rpx;
}

/* 1. 用户头部 */
.user-header {
  min-height: 420rpx; /* 高度稍微减小，因为不需要放表单了 */
  background: linear-gradient(180deg, #ff6b00 0%, #ff8e25 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  padding-bottom: 100rpx;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  padding-top: 20rpx;
  position: relative;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 0, 0.2);
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.4);
  margin-bottom: 20rpx;
  background-color: #fff;
}

.user-info-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.login-tip {
  font-size: 24rpx;
  background: rgba(255,255,255,0.2);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255,255,255,0.3);
}

/* 菜单卡片 */
.menu-card {
  background-color: #fff;
  margin: 0 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  position: relative;
  z-index: 2;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 36rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 28rpx;
}

.menu-name {
  font-size: 32rpx;
  color: #333;
}

.arrow-right {
  font-size: 28rpx;
  color: #ddd;
}

/* --- 弹窗样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px); /* 模糊背景效果 */
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  animation: popUp 0.3s ease-out;
}

@keyframes popUp {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 复用之前的表单样式，微调颜色 */
.login-form {
  width: 100%;
}

.input-row {
  display: flex;
  align-items: center;
  background: #f5f7fa; /* 浅灰背景 */
  border-radius: 50rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 90rpx;
  font-weight: 600;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.login-btn {
  background: linear-gradient(90deg, #ff6b00, #ff9402);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 0, 0.3);
  border: none;
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}