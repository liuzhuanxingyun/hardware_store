/* pages/mine/mine.wxss */
page {
  background-color: #f7f9fb;
}

.container-mine {
  padding-bottom: 100rpx;
}

/* 1. 用户头部 - 橙色渐变背景 */
.user-header {
  height: 400rpx;
  background: linear-gradient(135deg, #ff6b00, #ff9402);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  padding-bottom: 60rpx; /* 给下方的卡片留出空间 */
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  padding-top: 40rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
  background-color: #fff;
}

.user-info-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}

.login-tip {
  font-size: 24rpx;
  opacity: 0.9;
  background: rgba(255,255,255,0.2);
  padding: 6rpx 24rpx;
  border-radius: 24rpx;
}

/* 通用卡片样式 */
.menu-card {
  background-color: #fff;
  margin: 0 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

/* 菜单列表 */
.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 30rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #fafafa;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-name {
  font-size: 30rpx;
  color: #333;
}

.arrow-right {
  font-size: 26rpx;
  color: #ccc;
}