/* pages/mine/mine.wxss */
page {
  background-color: #f8f8f8;
}

.container-mine {
  padding-bottom: 100rpx;
}

/* 1. 用户头部 */
.user-header {
  height: 400rpx;
  background: linear-gradient(180deg, #ff6b00 0%, #ff8e25 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  padding-bottom: 80rpx; /* 为下方卡片留出空间 */
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.avatar-box {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info-box {
  text-align: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  background: rgba(0,0,0,0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

/* 2. 菜单卡片 */
.menu-card {
  background-color: #fff;
  margin: -60rpx 30rpx 0; /* 负边距实现重叠效果 */
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  z-index: 2;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-name {
  font-size: 30rpx;
  color: #333;
}

.arrow-right {
  font-size: 26rpx;
  color: #ccc;
}

/* --- 弹窗样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4px); /* 模糊背景效果 */
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  animation: popUp 0.3s ease-out;
}

@keyframes popUp {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.modal-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 复用之前的表单样式，微调颜色 */
.login-form {
  width: 100%;
}

.input-row {
  display: flex;
  align-items: center;
  background: #f5f7fa; /* 浅灰背景 */
  border-radius: 50rpx;
  padding: 24rpx 30rpx;
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 90rpx;
  font-weight: 600;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.login-btn {
  background: linear-gradient(90deg, #ff6b00, #ff9402);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 0, 0.3);
  border: none;
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}