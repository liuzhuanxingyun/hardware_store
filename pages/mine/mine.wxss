/* pages/mine/mine.wxss */
.container-mine {
  min-height: 100vh;
  background: #f7f9fb;
}

.header-bg {
  height: 420rpx;
  background: linear-gradient(135deg, #ff8e2d 0%, #ff6b00 100%);
  padding: 180rpx 40rpx 0;
  box-sizing: border-box;
  border-radius: 0 0 40rpx 40rpx; /* 底部圆弧 */
}

.user-card {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.6);
  background: #fff;
}

.user-info {
  margin-left: 30rpx;
  color: #fff;
}

.nickname {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.vip-badge {
  display: inline-flex;
  align-items: center;
  background: rgba(0,0,0,0.15);
  padding: 4rpx 16rpx 4rpx 6rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #fff;
}

.vip-icon {
  width: 32rpx;
  height: 32rpx;
  background: #ffd700;
  color: #333;
  border-radius: 50%;
  text-align: center;
  line-height: 32rpx;
  font-weight: bold;
  margin-right: 8rpx;
  font-size: 20rpx;
}

.login-tip {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
}

/* 卡片通用 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.03);
}

/* 订单区域 */
.order-section {
  margin-top: -80rpx; /* 悬浮效果 */
  position: relative;
  z-index: 1;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f9f9f9;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.more-wrap {
  display: flex;
  align-items: center;
}

.more {
  font-size: 24rpx;
  color: #999;
}

.arrow-right {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 6rpx;
}

.order-grid {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-box {
  position: relative;
  margin-bottom: 16rpx;
}

.icon-placeholder {
  width: 80rpx;
  height: 80rpx;
  background: #fff5eb; /* 浅橙色背景 */
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ff6b00;
  font-weight: bold;
}

.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 16rpx;
  border: 2rpx solid #fff;
  padding: 0 6rpx;
  box-sizing: border-box;
}

.order-name {
  font-size: 24rpx;
  color: #555;
}

/* 菜单列表 */
.menu-section {
  padding: 0 30rpx;
  position: relative;
}

.menu-inner {
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-section .menu-inner:last-of-type {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon-box {
  width: 40rpx;
  height: 40rpx;
  background: #eee; /* 占位灰色，有图后可去掉背景色 */
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 按钮覆盖层：巧妙解决 button 样式难调的问题 */
.btn-cover {
  position: absolute;
  left: 0;
  right: 0;
  height: 110rpx;
  margin-top: -110rpx; /* 上移覆盖 */
  background: transparent;
  border: none;
  border-radius: 0;
}

.btn-cover::after {
  border: none;
}

.version-info {
  text-align: center;
  color: #ccc;
}