/* pages/order_list/order_list.wxss */
page {
  background-color: #f5f5f5;
  height: 100%;
}

.container-order-list {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

navigation-bar {
  flex: none;
}

.content-scroll {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
  box-sizing: border-box;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-time {
  color: #999;
}

.order-status {
  color: #ff6b00;
  font-weight: bold;
}

.goods-item {
  display: flex;
  margin-bottom: 20rpx;
}

.goods-img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background: #f8f8f8;
  margin-right: 20rpx;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-spec {
  font-size: 24rpx;
  color: #999;
}

.goods-price-box {
  text-align: right;
}

.price {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  padding-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.total-count {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.total-label {
  font-size: 26rpx;
  color: #333;
  margin-right: 8rpx;
}

.total-price {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.empty-state {
  text-align: center;
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}